<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.schiffers.simpanpinjam.DetilAnggota">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="Kode Anggota"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:id="@+id/txtanggota6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/txtanggota7"
        android:text="----"
        android:textSize="18dp"
        android:layout_alignTop="@+id/txtanggota6"
        android:layout_toRightOf="@+id/imgtangga2"
        android:layout_toEndOf="@+id/imgtangga2" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nama"
        android:layout_below="@+id/txtanggota6"
        android:ems="10"
        android:layout_marginTop="40dp"
        android:id="@+id/edtanggota12"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:layout_below="@+id/edtanggota12"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/txtanggota9" />
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtanggota10"
        android:textSize="17dp"
        android:text="-----"
        android:layout_above="@+id/txtanggota8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txtanggota9"
        android:layout_marginTop="25dp"
        android:textSize="17dp"
        android:id="@+id/txtanggota8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:id="@+id/edtanggota6"
        android:hint="Email"
        android:layout_below="@+id/edtanggota7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:id="@+id/edtanggota7"
        android:hint="Nomor Telepon"
        android:layout_below="@+id/txtanggota8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:hint="Alamat"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edtanggota6"
        android:id="@+id/edtanggota8"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:id="@+id/imgtangga2"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:layout_below="@+id/txtanggota9"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/edtanggota8"
        android:layout_alignRight="@+id/edtanggota8"
        android:layout_alignEnd="@+id/edtanggota8"
        android:id="@+id/btnupdateanggota" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btndeleteanggota"
        android:layout_alignTop="@+id/btnupdateanggota"
        android:layout_alignLeft="@+id/imgtangga2"
        android:layout_alignStart="@+id/imgtangga2" />
    
</RelativeLayout>
